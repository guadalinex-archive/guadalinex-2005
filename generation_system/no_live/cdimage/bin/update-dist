#! /bin/sh
set -e

[ -z "$CDIMAGE_ROOT" ] && export CDIMAGE_ROOT=~/cdimage
. "$CDIMAGE_ROOT/etc/config"

echo "Creando repositorios... "
cd $CDIMAGE_ROOT/ftp
apt-ftparchive -c $CDIMAGE_ROOT/etc/apt_flamenco.conf generate $CDIMAGE_ROOT/etc/flamenco.conf
apt-ftparchive -c $CDIMAGE_ROOT/etc/apt_flamenco.conf generate $CDIMAGE_ROOT/etc/d-i_flamenco.conf

echo "Repositorios creados... "
echo -n "Creando Release File... "
apt-ftparchive -c ../etc/apt_flamenco.conf release dists/breezy/ > dists/breezy/Release
echo "OK"
cd -

