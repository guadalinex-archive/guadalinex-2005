    <refname>&dhpackage;</refname>

    <refpurpose>a graphical partitioning tool</refpurpose>
  </refnamediv>
  <refsynopsisdiv>
      <cmdsynopsis>
         <command>&dhpackage;</command>

         <arg><option>-?, </option><option>--help</option></arg>
         <arg><option>--installer</option></arg>
         <arg><option>--display=<replaceable>X</replaceable></option></arg>
    </cmdsynopsis>
